    // Form submission handlers
    function setupFormHandlers() {
        // Add Surat KU Form
        document.getElementById('addSuratKUForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Client-side validation
            const ttlInput = document.getElementById('new_tempat_tanggal_lahir');
            if (!/^[a-zA-Z\s]+\,\s\d{1,2}\s[a-zA-Z]+\s\d{4}$/.test(ttlInput.value)) {
                showNotification('Format Tempat, Tanggal Lahir salah. Contoh: Jakarta, 20 Februari 2004', 'error');
                ttlInput.focus();
                return;
            }

            const nikInput = document.getElementById('new_no_ktp_ku');
            if (!/^\d{16}$/.test(nikInput.value)) {
                showNotification('NIK harus terdiri dari 16 digit angka', 'error');
                nikInput.focus();
                return;
            }

            // Collect form data
            const formData = {
                nama: document.getElementById('new_nama_ku').value,
                tempat_tanggal_lahir: ttlInput.value,
                no_ktp: nikInput.value,
                alamat_ktp: document.getElementById('new_alamat_ktp_ku').value,
                jenis_usaha: document.getElementById('new_jenis_usaha_ku').value,
                alamat_usaha: document.getElementById('new_alamat_usaha_ku').value,
                lama_usaha: document.getElementById('new_lama_usaha_ku').value,
                nama_bank: document.getElementById('new_nama_bank_ku').value,
                alamat_bank: document.getElementById('new_alamat_bank_ku').value
            };

            try {
                const response = await fetch('/surat-ku', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    showNotification('Surat keterangan usaha berhasil ditambahkan', 'success');
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    showNotification(result.message || 'Gagal menambahkan surat keterangan usaha', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showNotification('Terjadi kesalahan saat mengirim data', 'error');
            }
        });

        // Edit Surat KU Form
        if (editSuratKUForm) {
            editSuratKUForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const id = document.getElementById('edit_id_ku').value;
                const formData = {
                    nama: document.getElementById('edit_nama_ku').value,
                    no_ktp: document.getElementById('edit_no_ktp_ku').value,
                    alamat_ktp: document.getElementById('edit_alamat_ktp_ku').value,
                    jenis_usaha: document.getElementById('edit_jenis_usaha_ku').value,
                    alamat_usaha: document.getElementById('edit_alamat_usaha_ku').value,
                    lama_usaha: document.getElementById('edit_lama_usaha_ku').value,
                    nama_bank: document.getElementById('edit_nama_bank_ku').value,
                    alamat_bank: document.getElementById('edit_alamat_bank_ku').value,
                    status: document.getElementById('edit_status_ku').value
                };

                // Client-side validation
                if (!/^\d{16}$/.test(formData.no_ktp)) {
                    showNotification('NIK harus 16 digit angka', 'error');
                    return;
                }

                try {
                    const response = await fetch(`/api/surat-ku/${id}`, {
                        method: 'PUT',
                        headers: { 
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    });

                    // Check content type before parsing JSON
                    const contentType = response.headers.get('content-type');
                    if (!contentType?.includes('application/json')) {
                        throw new Error(await response.text() || 'Invalid response from server');
                    }

                    const result = await response.json();

                    if (!response.ok) {
                        throw new Error(result.message || 'Gagal memperbarui surat');
                    }

                    showNotification('Surat berhasil diperbarui', 'success');
                    setTimeout(() => window.location.reload(), 1500);
                } catch (error) {
                    console.error('Error:', error);
                    showNotification(error.message || 'Terjadi kesalahan saat memperbarui surat', 'error');
                }
            });
        }

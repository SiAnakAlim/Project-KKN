    // Filter and Search Elements
    const statusFilter = document.getElementById('statusFilterKU');
    const perPageFilter = document.getElementById('perPageKU');
    const searchInput = document.getElementById('searchInputKU');

    // Initialize filters from URL parameters
    function initializeFilters() {
        const urlParams = new URLSearchParams(window.location.search);
        
        if (urlParams.has('status')) {
            statusFilter.value = urlParams.get('status');
        }
        if (urlParams.has('perPage')) {
            perPageFilter.value = urlParams.get('perPage');
        }
        if (urlParams.has('search')) {
            searchInput.value = urlParams.get('search');
        }
    }

    // Update URL with current filter values
    function updateFilters() {
        const params = new URLSearchParams();
        
        if (statusFilter.value !== 'semua') {
            params.set('status', statusFilter.value);
        }
        
        if (perPageFilter.value !== '10') {
            params.set('perPage', perPageFilter.value);
        }
        
        if (searchInput.value.trim() !== '') {
            params.set('search', searchInput.value.trim());
        }
        
        // Reset to page 1 when filters change
        params.set('page', '1');
        
        window.location.search = params.toString();
    }

    // Setup event listeners for filters
    function setupFilterListeners() {
        statusFilter.addEventListener('change', updateFilters);
        perPageFilter.addEventListener('change', updateFilters);
        
        // Debounce search input (500ms delay)
        let searchTimeout;
        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(updateFilters, 500);
        });
        
        // Also trigger search on Enter key
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                updateFilters();
            }
        });
    }

    // Modal control functions
    function setupModalControls() {
        // Add Surat KU Modal
        if (addSuratKUBtn && addSuratKUModal) {
            addSuratKUBtn.addEventListener('click', () => {
                addSuratKUModal.classList.remove('hidden');
                displayTanggalKU();
            });

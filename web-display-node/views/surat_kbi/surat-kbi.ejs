                    <div class="overflow-x-auto">
                        <table class="w-full border-collapse">
                            <thead>
                                <tr class="bg-golden-50 text-left">
                                    <th class="p-3 font-semibold text-gray-700">Nomor</th>
                                    <th class="p-3 font-semibold text-gray-700">Nomor Surat</th>
                                    <th class="p-3 font-semibold text-gray-700">Nama</th>
                                    <th class="p-3 font-semibold text-gray-700">Tanggal Permohonan</th>
                                    <th class="p-3 font-semibold text-gray-700">Status</th>
                                    <th class="p-3 font-semibold text-gray-700 text-right">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (suratKBI.length > 0) { %>
                                    <%
                                        // Hitung offset untuk nomor urut
                                        const offsetKBI = (currentPageKBI - 1) * perPageKBI;
                                        suratKBI.forEach((row, index) => { %>
                                            <tr class="border-b hover:bg-golden-50 transition-colors">
                                                <td class="p-3 text-gray-800"><%= offsetKBI + index + 1 %></td>
                                                <td class="p-3 text-gray-800"><%= row.nomor_surat %></td>
                                                <td class="p-3 text-gray-800"><%= row.nama %></td>
                                                <td class="p-3 text-gray-800"><%= new Date(row.tanggal_permohonan).toLocaleDateString('id-ID') %></td>
                                                <td class="p-3">
                                                    <% if (row.status === 'Diproses') { %>
                                                        <span class="px-3 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
                                                            <i class="fas fa-clock mr-1"></i> <%= row.status %>
                                                        </span>
                                                    <% } else if (row.status === 'Selesai') { %>
                                                        <span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                                                            <i class="fas fa-check-circle mr-1"></i> <%= row.status %>
                                                        </span>
                                                    <% } else if (row.status === 'Ditolak') { %>
                                                        <span class="px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                                                            <i class="fas fa-times-circle mr-1"></i> <%= row.status %>
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td class="p-3 text-right">
                                                    <div class="flex justify-end space-x-2 items-center">
                                                        <a href="/surat-kbi/<%= row.id %>"
                                                           class="text-gold-600 hover:text-gold-800 p-1 rounded hover:bg-golden-50"
                                                           title="Detail">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/cetak-surat-kbi/<%= row.id %>"
                                                           class="text-green-600 hover:text-green-800 p-1 rounded hover:bg-green-50"
                                                           title="Cetak">
                                                            <i class="fas fa-print"></i>
                                                        </a>
                                                        <button onclick="editSuratKBI('<%= row.id %>')"
                                                                class="text-purple-600 hover:text-purple-800 p-1 rounded hover:bg-purple-50"
                                                                title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <% if (row.status === 'Selesai' && row.nomor_wa) { %>
                                                            <%
                                                                let nomorWhatsAppTableKBI = row.nomor_wa;
                                                                if (nomorWhatsAppTableKBI.includes('@s.whatsapp.net')) {
                                                                    nomorWhatsAppTableKBI = nomorWhatsAppTableKBI.split('@')[0];
                                                                }
                                                                if (nomorWhatsAppTableKBI.startsWith('0')) {
                                                                    nomorWhatsAppTableKBI = '+62' + nomorWhatsAppTableKBI.substring(1);
                                                                } else if (!nomorWhatsAppTableKBI.startsWith('+')) {
                                                                    nomorWhatsAppTableKBI = '+62' + nomorWhatsAppTableKBI;
                                                                }
                                                            %>
                                                            <a href="https://wa.me/<%= nomorWhatsAppTableKBI %>?text=Yth.%20<%= encodeURIComponent(row.nama) %>,%0ASurat%20Keterangan%20Beda%20Identitas%20Anda%20dengan%20nomor%20<%= encodeURIComponent(row.nomor_surat) %>%20sudah%20selesai.%20Anda%20bisa%20mengambilnya%20di%20kantor%20desa%20pada%20jam%20kerja."
                                                               target="_blank"
                                                               class="inline-flex items-center p-1 rounded hover:bg-green-100 text-green-600 hover:text-green-800"
                                                               title="Hubungi via WhatsApp">
                                                                <i class="fab fa-whatsapp text-lg"></i>
                                                            </a>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="p-4 text-center text-gray-500">
                                            <i class="fas fa-inbox text-3xl mb-2 text-gray-300"></i>
                                            <p>Tidak ada data surat keterangan beda identitas.</p>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    
                        <% if (totalPagesKBI > 1) { %>
                            <div class="flex justify-between items-center mt-6">
                                <div class="text-sm text-gray-600">
                                    Menampilkan <%= currentPageKBI * perPageKBI - perPageKBI + 1 %>-<%= Math.min(currentPageKBI * perPageKBI, totalItemsKBI) %> dari <%= totalItemsKBI %> surat
                                </div>
                                <div class="flex space-x-1">
                                    <% if (currentPageKBI > 1) { %>
                                        <a href="?page=<%= currentPageKBI - 1 %>&perPage=<%= perPageKBI %>&status=<%= currentStatusKBI %>&search=<%= currentSearchKBI %>"
                                           class="px-3 py-1 border rounded hover:bg-golden-50">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    <% } %>
                    
                                    <% for (let i = 1; i <= totalPagesKBI; i++) { %>
                                        <% if (i === currentPageKBI) { %>
                                            <span class="px-3 py-1 border rounded bg-gold-600 text-white"><%= i %></span>
                                        <% } else if (i >= currentPageKBI - 2 && i <= currentPageKBI + 2) { %>
                                            <a href="?page=<%= i %>&perPage=<%= perPageKBI %>&status=<%= currentStatusKBI %>&search=<%= currentSearchKBI %>"
                                               class="px-3 py-1 border rounded hover:bg-golden-50"><%= i %></a>
                                        <% } else if (i === 1 || i === totalPagesKBI) { %>
                                            <a href="?page=<%= i %>&perPage=<%= perPageKBI %>&status=<%= currentStatusKBI %>&search=<%= currentSearchKBI %>"
                                               class="px-3 py-1 border rounded hover:bg-golden-50"><%= i %></a>
                                        <% } else if (i === currentPageKBI - 3 || i === currentPageKBI + 3) { %>
                                            <span class="px-3 py-1">...</span>
                                        <% } %>
                                    <% } %>
                    
                                    <% if (currentPageKBI < totalPagesKBI) { %>
                                        <a href="?page=<%= currentPageKBI + 1 %>&perPage=<%= perPageKBI %>&status=<%= currentStatusKBI %>&search=<%= currentSearchKBI %>"
                                           class="px-3 py-1 border rounded hover:bg-golden-50">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
                

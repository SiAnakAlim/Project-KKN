        </nav>

        <div class="flex flex-1 relative">
            <!-- Sidebar with gold accents -->
            <!-- Sidebar -->
            <button id="mobileMenuButton" class="md:hidden fixed top-4 left-4 bg-gold-500 text-white p-2 rounded-md shadow-md z-50">

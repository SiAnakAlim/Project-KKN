<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pengaturan</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Pengaturan</h1>

        <div class="bg-white rounded-lg shadow-md p-4 mb-4">
            <h2 class="text-lg font-semibold mb-2">Mode Tampilan</h2>
            <div class="flex items-center">
                <span class="mr-2">Mode Terang</span>
                <input type="radio" name="mode" value="light" id="light" class="mr-2" checked>
                <span class="mr-2">Mode Malam</span>
                <input type="radio" name="mode" value="dark" id="dark">
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-4 mb-4">
            <h2 class="text-lg font-semibold mb-2">Warna Tema</h2>
            <div class="flex items-center">
                <span class="mr-2">Biru</span>
                <input type="radio" name="warna" value="biru" id="biru" class="mr-2" checked>
                <span class="mr-2">Hijau</span>
                <input type="radio" name="warna" value="hijau" id="hijau">
                <span class="mr-2">Merah</span>
                <input type="radio" name="warna" value="merah" id="merah">
            </div>
        </div>

        <button id="simpan" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Simpan</button>
    </div>

    <script>
        const simpan = document.getElementById('simpan');
        simpan.addEventListener('click', () => {
            const mode = document.querySelector('input[name="mode"]:checked').value;
            const warna = document.querySelector('input[name="warna"]:checked').value;
            localStorage.setItem('mode', mode);
            localStorage.setItem('warna', warna);
            alert('Pengaturan disimpan!');
        });

        const mode = localStorage.getItem('mode');
        const warna = localStorage.getItem('warna');

        if (mode === 'dark') {
            document.body.classList.add('dark');
            document.getElementById('dark').checked = true;
        }

        if (warna === 'hijau') {
            document.body.classList.add('bg-green-100');
            document.getElementById('hijau').checked = true;
        } else if (warna === 'merah') {
            document.body.classList.add('bg-red-100');
            document.getElementById('merah').checked = true;
        }
    </script>
</body>
</html>
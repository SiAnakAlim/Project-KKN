<div id="downloadOptionsModal" style="display:none; position: fixed; z-index: 1; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0,0,0,0.4);">
    <div style="background-color: #fefefe; margin: 15% auto; padding: 20px; border: 1px solid #888; width: 80%;">
        <h2>Opsi Unduh PDF</h2>
        <button onclick="previewPdf('<%= surat.id %>')">Lihat Dulu</button>
        <button onclick="downloadPdf('<%= surat.id %>')">Unduh</button>
        <button onclick="printPdf('<%= surat.id %>')">Cetak</button>
        <button onclick="closeDownloadOptions()">Batal</button>
    </div>
</div>

<script>
function showDownloadOptions(suratId) {
    document.getElementById('downloadOptionsModal').style.display = "block";
}

function closeDownloadOptions() {
    document.getElementById('downloadOptionsModal').style.display = "none";
}

function previewPdf(suratId) {
    window.open(`/download-pdf/${suratId}?action=preview`, '_blank'); // Atau buat rute terpisah jika perlu
    closeDownloadOptions();
}

function downloadPdf(suratId) {
    window.location.href = `/download-pdf/${suratId}?action=download`;
    closeDownloadOptions();
}

function printPdf(suratId) {
    window.open(`/cetak-surat/${suratId}`, '_blank');
    closeDownloadOptions();
}
function savePdf(suratId) {
    // Buat nama file PDF
    const namaFile = `Surat_${suratId}_${new Date().toISOString().slice(0,10)}.pdf`;
    
    // Panggil endpoint download dengan action=download
    fetch(`/download-pdf/${suratId}?action=download`)
        .then(response => response.blob())
        .then(blob => {
            // Buat URL object dari blob
            const url = window.URL.createObjectURL(blob);
            
            // Buat elemen anchor untuk download
            const a = document.createElement('a');
            a.href = url;
            a.download = namaFile;
            document.body.appendChild(a);
            a.click();
            
            // Bersihkan
            window.URL.revokeObjectURL(url);
            document.body.removeChild(a);
        })
        .catch(error => {
            console.error('Error saving PDF:', error);
            alert('Gagal menyimpan PDF');
        });
}
</script>
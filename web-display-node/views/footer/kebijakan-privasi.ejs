<script>
    // Add this script to handle the creator cards
    function toggleCreatorCard(creatorId) {
        // Hide all cards first
        document.querySelectorAll('.creator-card').forEach(card => {
            card.classList.remove('show');
        });
        
        // Show the selected card
        const card = document.getElementById(`${creatorId}-card`);
        if (card) {
            card.classList.toggle('show');
        }
        
        // Close when clicking outside
        document.addEventListener('click', function closeCard(e) {
            if (!e.target.closest('.creator-link') && !e.target.closest('.creator-card')) {
                document.querySelectorAll('.creator-card').forEach(card => {
                    card.classList.remove('show');
                });
                document.removeEventListener('click', closeCard);
            }
        });
    }
    
    // Close card when clicking on another creator link
    document.querySelectorAll('.creator-link').forEach(link => {
        link.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    });
</script>

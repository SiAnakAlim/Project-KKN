<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Surat Keterangan Tidak Mampu</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        gold: {
                            400: '#e6b800',
                            500: '#d4a900',
                            600: '#c29a00',
                            700: '#b08b00',
                        },
                        golden: {
                            50: '#fff9e6',
                            100: '#fff2cc',
                        }
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0', transform: 'translateY(10px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex flex-col animate-fade-in">
        <nav class="bg-gradient-to-r from-gold-600 to-gold-500 p-4 text-white shadow-lg">
            <div class="container mx-auto flex justify-between items-center">
                <div class="flex items-center space-x-3 ml">
                    
                    <span class="text-xl font-bold tracking-wide">Detail Surat Keterangan Tidak Mampu</span>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="hidden md:block bg-gold-700 px-3 py-1 rounded-full text-sm font-medium animate-pulse-slow">
                        <i class="fas fa-circle text-xs mr-1"></i> Online
                    </div>
                </div>
            </div>
        </nav>

        <div class="flex-1 p-6">
            <div class="max-w-6xl mx-auto">
                <div class="flex justify-between items-center mb-8">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-800">Detail Surat Keterangan Tidak Mampu</h1>
                        <p class="text-sm text-gray-500 mt-1">Informasi lengkap surat keterangan tidak mampu</p>
                    </div>
                    <div class="flex space-x-3">
                        <a href="/cetak-surat-sktm/<%= suratSKTM.id %>" class="bg-emerald-500 hover:bg-emerald-600 text-white font-medium py-2 px-4 rounded-lg shadow-md transition-all duration-200 flex items-center hover:shadow-lg">
                            <i class="fas fa-print mr-2"></i> Cetak Surat
                        </a>
                        <a href="/surat-sktm" class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg shadow-md transition-all duration-200 flex items-center hover:shadow-lg">
                            <i class="fas fa-arrow-left mr-2"></i> Kembali
                        </a>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-xl overflow-hidden border border-gray-200">
                    <div class="bg-white px-6 py-4 border-b border-gray-200">
                        <div class="flex justify-between items-center">
                            <h2 class="text-lg font-semibold text-gray-800 flex items-center">
                                <i class="fas fa-file-alt text-gold-600 mr-2"></i>
                                Informasi Surat
                            </h2>
                            <div class="flex items-center">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold
                                    <%= suratSKTM.status === 'Diproses' ? 'bg-amber-100 text-amber-800' : '' %>
                                    <%= suratSKTM.status === 'Selesai' ? 'bg-green-100 text-green-800' : '' %>
                                    <%= suratSKTM.status === 'Ditolak' ? 'bg-red-100 text-red-800' : '' %>">
                                    <i class="<%= suratSKTM.status === 'Diproses' ? 'fas fa-clock' : '' %>
                                        <%= suratSKTM.status === 'Selesai' ? 'fas fa-check-circle' : '' %>
                                        <%= suratSKTM.status === 'Ditolak' ? 'fas fa-times-circle' : '' %> mr-1"></i>
                                    <%= suratSKTM.status %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div class="space-y-5">
                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">ID</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800 font-medium"><%= suratSKTM.id %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Nomor Surat</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.nomor_surat %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Nama</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.nama %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">No. Kartu Keluarga</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.no_kk %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">NIK</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.nik %></p>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-5">
                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Tempat Tanggal Lahir</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.tempat_tanggal_lahir %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Jenis Kelamin</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.jenis_kelamin %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Alamat</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.alamat %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Nomor HP</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.nomor_hp %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Jenis Surat</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= suratSKTM.jenis_surat %></p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-4 gap-2 items-start">
                                    <div class="col-span-1 flex justify-between">
                                        <p class="text-sm font-medium text-gray-500">Tanggal Permohonan</p>
                                        <p class="text-gray-500 mr-2">:</p>
                                    </div>
                                    <div class="col-span-3">
                                        <p class="text-sm text-gray-800"><%= new Date(suratSKTM.tanggal_permohonan).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-xl overflow-hidden border border-gray-200 mt-6">
                    <div class="bg-white px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-semibold text-gray-800 flex items-center">
                            <i class="fas fa-pen-fancy text-gold-600 mr-2"></i>
                            Informasi Penandatangan
                        </h2>
                    </div>
                
                    <div class="p-6">
                        <form id="signatoryForm" class="space-y-5" data-surat-id="<%= suratSKTM.id %>">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- Jabatan Penandatangan -->
                                <div>
                                    <label for="jabatan_penandatangan" class="block text-sm font-medium text-gray-700 mb-1">
                                        Jabatan Penandatangan
                                    </label>
                                    <div class="relative">
                                        <input type="text" id="jabatan_penandatangan" name="jabatan_penandatangan"
                                            value="<%= suratSKTM.jabatan_penandatangan %>"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition-all"
                                            placeholder="a.n Kepala Desa Kebondalem Kidul">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                                            <i class="fas fa-user-tie"></i>
                                        </div>
                                    </div>
                                </div>
                
                                <!-- Jabatan Sebenarnya -->
                                <div>
                                    <label for="jabatan_sebenarnya" class="block text-sm font-medium text-gray-700 mb-1">
                                        Jabatan Sebenarnya
                                    </label>
                                    <div class="relative">
                                        <input type="text" id="jabatan_sebenarnya" name="jabatan_sebenarnya"
                                            value="<%= suratSKTM.jabatan_sebenarnya %>"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition-all"
                                            placeholder="Sekretaris Desa">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                                            <i class="fas fa-id-card"></i>
                                        </div>
                                    </div>
                                </div>
                
                                <!-- Nama Penandatangan -->
                                <div class="md:col-span-2">
                                    <label for="nama_penandatangan" class="block text-sm font-medium text-gray-700 mb-1">
                                        Nama Penandatangan
                                    </label>
                                    <div class="relative">
                                        <input type="text" id="nama_penandatangan" name="nama_penandatangan"
                                            value="<%= suratSKTM.nama_penandatangan %>"
                                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 transition-all"
                                            placeholder="DARU PURNOMO">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400">
                                            <i class="fas fa-signature"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                
                            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                                <button type="button" onclick="resetForm()"
                                    class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg transition-all flex items-center">
                                    <i class="fas fa-undo mr-2"></i> Reset
                                </button>
                                <button type="submit"
                                    class="px-4 py-2 bg-gold-600 hover:bg-gold-700 text-white rounded-lg shadow-md transition-all flex items-center hover:shadow-lg">
                                    <i class="fas fa-save mr-2"></i> Simpan Perubahan
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
     document.getElementById('signatoryForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const form = this;
    const suratId = form.dataset.suratId;
    const formData = {
        jabatan_penandatangan: document.getElementById('jabatan_penandatangan').value,
        jabatan_sebenarnya: document.getElementById('jabatan_sebenarnya').value,
        nama_penandatangan: document.getElementById('nama_penandatangan').value
    };

    try {
        const response = await fetch(`/api/surat-sktm/signatory/${suratId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
        });

        const result = await response.json();

        if (result.success) {
            showToast('Perubahan berhasil disimpan!', 'bg-green-500');
            setTimeout(() => location.reload(), 1500);
        } else {
            showToast('Gagal menyimpan perubahan: ' + (result.message || ''), 'bg-red-500');
        }
    } catch (error) {
        showToast('Terjadi kesalahan: ' + error.message, 'bg-red-500');
        console.error('Error:', error);
    }
});

        // Show toast notification
        function showToast(message, bgColor) {
            const toast = document.createElement('div');
            toast.className = `fixed bottom-6 right-6 ${bgColor} text-white px-4 py-2 rounded-md shadow-lg flex items-center animate-fade-in`;
            toast.innerHTML = `
                <i class="fas fa-info-circle mr-2"></i>
                <span>${message}</span>
            `;
            document.body.appendChild(toast);

            setTimeout(() => {
                toast.classList.add('opacity-0', 'transition-opacity', 'duration-300');
                setTimeout(() => {
                    document.body.removeChild(toast);
                }, 300);
            }, 3000);
        }
        function resetForm() {
    // Ambil nilai default dari form data attributes
    const form = document.getElementById('signatoryForm');
    
    // Reset ke nilai default dari database
    document.getElementById('jabatan_penandatangan').value = 'a.n Kepala Desa Kebondalem Kidul';
    document.getElementById('jabatan_sebenarnya').value = 'Sekretaris Desa';
    document.getElementById('nama_penandatangan').value = 'DARU PURNOMO';
    
    showToast('Form telah direset ke nilai default', 'bg-blue-500');
}
        // Download PDF (fungsi ini mungkin tidak terpakai di UI saat ini)
        function downloadPdf(pdfFile) {
            const downloadLink = document.createElement('a');
            downloadLink.href = `/public/pdf/${pdfFile}`;
            downloadLink.download = pdfFile;
            document.body.appendChild(downloadLink);
            downloadLink.click();
            document.body.removeChild(downloadLink);
            showToast('File sedang diunduh...', 'bg-gold-500');
        }

        // Print PDF
        function printPdf() {
            const printUrl = `/cetak-surat-sktm/<%= suratSKTM.id %>`;
            window.open(printUrl, '_blank');
            showToast('Membuka dokumen untuk dicetak...', 'bg-green-500');
        }

        // Mengubah fungsi cetak agar sesuai dengan tombol "Cetak Surat"
        document.querySelectorAll('a[href="/cetak-surat-sktm/<%= suratSKTM.id %>"]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                printPdf();
            });
        });
    </script>
</body>
</html>
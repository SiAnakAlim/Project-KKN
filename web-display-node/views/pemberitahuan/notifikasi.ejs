                                            </select>
                                        </div>
                                        
                                        <nav>
                                            <ul class="pagination pagination-sm mb-0">
                                                <% if (currentPage > 1) { %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="?page=<%= currentPage - 1 %>&size=<%= pageSize %>&tab=kbi">
                                                            <i class="bi bi-chevron-left"></i>
                                                        </a>
                                                    </li>
                                                <% } %>
                                                
                                                <% for (let i = 1; i <= kbiTotalPages; i++) { %>

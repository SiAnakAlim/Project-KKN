                                    </div>
                                <% } %>
                            </div>
                            
                            <!-- Tab Keterangan Usaha -->
                            <div class="tab-pane fade" id="ku" role="tabpanel">
                                <% 
                                const kuNotifs = notifications.filter(n => n.related_type === 'surat_ku');
                                const kuTotalPages = Math.ceil(kuNotifs.length / pageSize);
                                if (kuNotifs.length > 0) { 
                                %>
                                    <% const paginatedKU = paginate(kuNotifs, currentPage, pageSize); %>
                                    <% paginatedKU.forEach(notif => { %>
                                        <div class="card notification-card mb-3 <%= notif.is_read ? '' : 'notification-unread' %>">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="notification-content">
                                                        <h5 class="notification-title">
                                                            <%= notif.title %>
                                                            <% if (!notif.is_read) { %>
                                                                <span class="badge badge-unread rounded-pill ms-2">Baru</span>
                                                            <% } %>
                                                        </h5>
                                                        <p class="notification-message"><%= notif.message %></p>

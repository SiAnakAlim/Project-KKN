    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // SSE untuk notifikasi real-time
        if (typeof(EventSource) !== "undefined") {
            const eventSource = new EventSource("/notifications-stream");
            
            eventSource.onmessage = function(event) {
                const data = JSON.parse(event.data);
                
                // Buat toast notifikasi
                const toastHtml = `
                    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                        <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="toast-header bg-warning">
                                <strong class="me-auto">${data.title}</strong>
                                <small class="text-dark">Baru saja</small>
                                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                            <div class="toast-body">
                                ${data.message}
                                <div class="mt-2 pt-2 border-top">
                                    <a href="/mark-as-read/${data.id}?redirect=/${data.related_type}/${data.related_id}" class="btn btn-dark btn-sm">Lihat</a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                // Tambahkan toast ke body
                document.body.insertAdjacentHTML('beforeend', toastHtml);
                
                // Auto-hide toast setelah 5 detik
                setTimeout(() => {
                    const toast = document.querySelector('.toast');
                    if (toast) {
                        toast.classList.remove('show');
                        setTimeout(() => toast.parentElement.remove(), 300);
                    }
                }, 5000);
                
                // Update notification count
                const countBadge = document.querySelector('.notification-count');
                if (countBadge) {
                    const currentCount = parseInt(countBadge.textContent);
                    countBadge.textContent = currentCount + 1;
                } else {
                    const badgeContainer = document.querySelector('.position-relative.d-inline-block');
                    if (badgeContainer) {
                        badgeContainer.insertAdjacentHTML('beforeend', 
                            '<span class="badge bg-danger rounded-pill notification-count">1</span>');
                    }
                }
                
                // Refresh notifikasi jika di tab yang sesuai
                const activeTab = new URLSearchParams(window.location.search).get('tab') || 'all';
                if (activeTab === 'all' || activeTab === data.related_type.replace('surat_', '')) {
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                }
            };
        }
        
        // Tab switching
        document.querySelectorAll('#notificationTabs .nav-link').forEach(tab => {
            tab.addEventListener('click', (e) => {
                const tabId = e.target.getAttribute('data-bs-target').substring(1);
                const url = new URL(window.location.href);
                url.searchParams.set('tab', tabId);
                url.searchParams.set('page', 1); // Reset ke halaman 1 saat ganti tab
                window.history.pushState({}, '', url);
                
                // Animasi transisi tab
                document.querySelectorAll('.tab-pane').forEach(pane => {
                    pane.style.opacity = 0;
                    setTimeout(() => {
                        pane.style.opacity = 1;
                    }, 300);
                });
            });
        });
        
        // Page size selector change handler
        document.querySelectorAll('select[id^="pageSize"]').forEach(select => {
            select.addEventListener('change', function() {
                const url = new URL(window.location.href);
                const activeTab = new URLSearchParams(window.location.search).get('tab') || 'all';
                
                url.searchParams.set('size', this.value);
                url.searchParams.set('page', 1);
                
                // Pertahankan tab aktif jika ada
                if (activeTab && activeTab !== 'all') {
                    url.searchParams.set('tab', activeTab);
                }
                
                window.location.href = url.toString();
            });
        });
        
        // Preserve tab state when paginating
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const activeTab = urlParams.get('tab') || 'all';
            
            // Aktifkan tab yang sesuai
            const tabElement = document.querySelector(`#${activeTab}-tab`);
            if (tabElement) {
                new bootstrap.Tab(tabElement).show();
            }
            
            // Update semua link pagination untuk menyertakan tab aktif
            document.querySelectorAll('.pagination a.page-link').forEach(link => {
                const href = new URL(link.href);
                if (!href.searchParams.has('tab') && activeTab !== 'all') {
                    href.searchParams.set('tab', activeTab);
                    link.href = href.toString();
                }
            });
            
            // Sinkronkan semua select box page size
            const pageSize = urlParams.get('size') || 10;
            document.querySelectorAll('select[id^="pageSize"]').forEach(select => {
                select.value = pageSize;
                
                // Tambahkan event listener jika belum ada
                if (!select.hasAttribute('data-listener-added')) {
                    select.addEventListener('change', function() {
                        const url = new URL(window.location.href);
                        url.searchParams.set('size', this.value);
                        url.searchParams.set('page', 1);
                        window.location.href = url.toString();
                    });
                    select.setAttribute('data-listener-added', 'true');
                }
            });
        });
        
        // Tangani popstate (back/forward button)
        window.addEventListener('popstate', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const activeTab = urlParams.get('tab') || 'all';
            
            const tabElement = document.querySelector(`#${activeTab}-tab`);
            if (tabElement) {
                new bootstrap.Tab(tabElement).show();
            }
        });
    </script>
</body>
</html>